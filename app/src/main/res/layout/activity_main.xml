<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/designActivityMainWindowColor"
    tools:context=".MainActivity">

    <TableRow android:layout_marginTop="10sp">
        <TextView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amatic_sc_bold"
            android:layout_weight="1"
            android:text="@string/logo"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorText"
            android:textSize="90sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.05" />
    </TableRow>

    <TableRow>
        <EditText
            android:id="@+id/calculator_task"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="0.75"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:background="@color/colorTaskBackgroundTint"
            android:hint="@string/task_hint"
            android:inputType="text"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorTextHint"
            android:textSize="40sp"/>

        <Button
            android:id="@+id/button_enter_task"
            android:layout_width="0dp"
            android:layout_height="108dp"
            android:layout_weight="0.25"
            android:layout_marginRight="4dp"
            android:backgroundTint="@color/colorEnterTaskButton"
            android:text="@string/enter_task_button"
            android:textColor="@color/colorText"
            app:cornerRadius="0dp"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/button_1"
            style="@style/DefaultLayoutMarginStyle"
            android:layout_width="0dp"
            android:layout_height="94dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/colorEnterTaskButton"
            android:text="@string/enter_1_button"
            android:textColor="@color/colorText"
            app:cornerRadius="0dp"/>
        <Button
            android:id="@+id/button_2"
            style="@style/DefaultLayoutMarginStyle"
            android:layout_width="0dp"
            android:layout_height="94dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/colorEnterTaskButton"
            android:text="@string/enter_2_button"
            android:textColor="@color/colorText"
            app:cornerRadius="0dp"/>
        <Button
            android:id="@+id/button_3"
            style="@style/DefaultLayoutMarginStyle"
            android:layout_width="0dp"
            android:layout_height="94dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/colorEnterTaskButton"
            android:text="@string/enter_3_button"
            android:textColor="@color/colorText"
            app:cornerRadius="0dp"/>
        <Button
            android:id="@+id/button_plus"
            style="@style/DefaultLayoutMarginStyle"
            android:layout_width="0dp"
            android:layout_height="94dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/colorActionButtons"
            android:text="@string/enter_plus_button"
            android:textColor="@color/colorText"
            app:cornerRadius="0dp"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/button_4"
            style="@style/DefaultLayoutMarginStyle"
            android:layout_width="0dp"
            android:layout_height="94dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/colorEnterTaskButton"
            android:text="@string/enter_4_button"
            android:textColor="@color/colorText"
            app:cornerRadius="0dp"/>
        <Button
            android:id="@+id/button_5"
            style="@style/DefaultLayoutMarginStyle"
            android:layout_width="0dp"
            android:layout_height="94dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/colorEnterTaskButton"
            android:text="@string/enter_5_button"
            android:textColor="@color/colorText"
            app:cornerRadius="0dp"/>
        <Button
            android:id="@+id/button_6"
            style="@style/DefaultLayoutMarginStyle"
            android:layout_width="0dp"
            android:layout_height="94dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/colorEnterTaskButton"
            android:text="@string/enter_6_button"
            android:textColor="@color/colorText"
            app:cornerRadius="0dp"/>
        <Button
            android:id="@+id/button_minus"
            style="@style/DefaultLayoutMarginStyle"
            android:layout_width="0dp"
            android:layout_height="94dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/colorActionButtons"
            android:text="@string/enter_minus_button"
            android:textColor="@color/colorText"
            app:cornerRadius="0dp"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/button_7"
            style="@style/DefaultLayoutMarginStyle"
            android:layout_width="0dp"
            android:layout_height="94dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/colorEnterTaskButton"
            android:text="@string/enter_7_button"
            android:textColor="@color/colorText"
            app:cornerRadius="0dp"/>
        <Button
            android:id="@+id/button_8"
            style="@style/DefaultLayoutMarginStyle"
            android:layout_width="0dp"
            android:layout_height="94dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/colorEnterTaskButton"
            android:text="@string/enter_8_button"
            android:textColor="@color/colorText"
            app:cornerRadius="0dp"/>
        <Button
            android:id="@+id/button_9"
            style="@style/DefaultLayoutMarginStyle"
            android:layout_width="0dp"
            android:layout_height="94dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/colorEnterTaskButton"
            android:text="@string/enter_9_button"
            android:textColor="@color/colorText"
            app:cornerRadius="0dp"/>
        <Button
            android:id="@+id/button_multiply"
            style="@style/DefaultLayoutMarginStyle"
            android:layout_width="0dp"
            android:layout_height="94dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/colorActionButtons"
            android:text="@string/enter_multiply_button"
            android:textColor="@color/colorText"
            app:cornerRadius="0dp"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button_DelAll"
            style="@style/DefaultLayoutMarginStyle"
            android:layout_width="0dp"
            android:layout_height="94dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/colorDelButtons"
            android:text="@string/enter_del_all_button"
            android:textColor="@color/colorText"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/button_0"
            style="@style/DefaultLayoutMarginStyle"
            android:layout_width="0dp"
            android:layout_height="94dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/colorEnterTaskButton"
            android:text="@string/enter_0_button"
            android:textColor="@color/colorText"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/button_Del"
            style="@style/DefaultLayoutMarginStyle"
            android:layout_width="0dp"
            android:layout_height="94dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/colorDelButtons"
            android:text="@string/enter_del_button"
            android:textColor="@color/colorText"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/button_div"
            style="@style/DefaultLayoutMarginStyle"
            android:layout_width="0dp"
            android:layout_height="94dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/colorActionButtons"
            android:text="@string/enter_div_button"
            android:textColor="@color/colorText"
            app:cornerRadius="0dp" />
    </TableRow>
</TableLayout>